<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orientalBlue"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="Safe-Driving"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/activity_login_tv1" />

        <TextView
            android:id="@+id/activity_login_tv1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="로그인"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" />


        <EditText
            android:id="@+id/activity_login_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="아이디"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/button_round"
            app:layout_constraintTop_toBottomOf="@id/activity_login_tv1" />


        <EditText
            android:id="@+id/activity_login_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="비밀번호"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/button_round"
            app:layout_constraintTop_toBottomOf="@id/activity_login_username" />

        <Button
            android:id="@+id/activity_login_button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="로그인"
            android:background="@drawable/button_round"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_password"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/activity_login_button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/button_round"
            android:text="회원가입"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_login_button_login"
            app:layout_constraintRight_toRightOf="parent" />


        <Button
            android:id="@+id/activity_login_button_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/button_round"
            android:text="임시 버튼"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_login_button_signup"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
